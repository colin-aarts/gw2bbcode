	// Slot

	[data-slot]
		background-image: url(image-path + icons/small/Any.png)

	[data-slot="Elite"] span
		padding: 0 .3em
		border-radius: .2em
		color: gold
		background: hsla(0, 0%, 0%, .5)
		background-image: -webkit-linear-gradient(top, hsla(0, 0%, 0%, .6), hsla(0, 0%, 0%, .8))
		background-image: -moz-linear-gradient(top, hsla(0, 0%, 0%, .6), hsla(0, 0%, 0%, .8))
		background-image: -ms-linear-gradient(top, hsla(0, 0%, 0%, .6), hsla(0, 0%, 0%, .8))
		background-image: -o-linear-gradient(top, hsla(0, 0%, 0%, .6), hsla(0, 0%, 0%, .8))
		background-image: linear-gradient(top, hsla(0, 0%, 0%, .6), hsla(0, 0%, 0%, .8))


	// Type

	[data-type]
		background-image: url(image-path + icons/small/Some.png)

	[data-type="General"]
