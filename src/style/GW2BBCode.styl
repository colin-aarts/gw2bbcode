/*	****************************************************************************
**	GW2BBCode Skill Element
**	***************************************************************************/


[data-skill]
	display: inline-block
	width: 3.5em
	width: 3.5rem
	height: 3.5em
	height: 3.5rem
	word-wrap: break-word
	overflow: hidden
	background: url(image-path + icons/No_icon.jpg) no-repeat
	background-size: cover
	color: white
	border-radius: .2em
	box-sizing: border-box

	&:hover, &:active, &:focus
		transform: scale(1.3)
		border: 2px solid #fff
		box-shadow: 0 0 1em hsla(0, 0%, 0%, .5)

	&[data-elite="true"]
		border: 2px solid gold
		box-shadow: 0 0 5px hsla(0, 0%, 0%, .5)

	> img
		vertical-align: bottom
		width: 100%
		height: 100%



/*	****************************************************************************
**	GW2BBCode Tooltip
**	***************************************************************************/

.tooltip.gw2bbcode
	position: absolute
	top: 0
	left: 0
	width: 28em
	width: 28rem
	padding: 1em
	padding: 1rem
	box-shadow: 0 0 1em hsla(0, 0%, 0%, .5)
	border: 1px solid hsla(0, 0%, 100%, .9)
	background-color: hsla(0, 0%, 100%, .98)
	background-image: url(image-path + logo-gw2-dragon-tooltip.png)
	background-repeat: no-repeat
	background-size: 4em
	background-position: bottom right
	font-size: 1em
	font-size: 1rem
	font-family: font-body
	line-height: 1.45
	color: hsl(0, 0%, 20%)
	opacity: 0
	pointer-events: none
	transition: opacity .2s ease .5s

	&[aria-hidden="false"]
		opacity: 1
		transition-duration: .1s
		z-index: 20

	p
		margin: 0


	/*
	**	Skill thumb
	*/

	.skill-thumb
		float: left
		margin: 0 .5em 0 0
		width: 4.3em
		height: 4.3em
		padding: 1px
		border: 1px solid hsl(0, 0%, 70%)
		border-radius: .4em
		box-sizing: border-box

		&[data-elite="true"]
			border: 3px solid gold
			box-shadow: 0 0 .5em hsla(0, 0%, 0%, .5)


	/*
	**	Header
	*/

	.header
		margin: 0 0 1em 0
		padding: 0 0 0 .5em
		min-height: 4.3em
		overflow: hidden


		// Title

		.title
			margin: 0 0 .2em 0
			font-family: font-heading
			font-size: 1.3em
			line-height: 1
			letter-spacing: .1em
			text-transform: uppercase


		// Description

		.description
			font-style: italic
			color: hsl(0, 0%, 40%)

			&:before,
			&:after
				color: hsl(0, 0%, 60%)

			&:before
				content: '“'
				margin-left: -.4em

			&:after
				content: '”'

			.signature-label
				color: hsl(0, 0%, 0%)


	/*
	**	Properties list
	*/

	ul.properties
		clear: both
		margin: 0
		padding: 0
		list-style: none

		> li
			margin: 0
			width: 49%
			box-sizing: border-box

			&:nth-child(-n+2)
				margin-bottom: .5em


			// Tags list

			&[data-tags]
				width: 100%
				margin-top: .5em

				> ul
					margin: 0
					padding: 0

					> li
						display: inline-block
						padding: 0 .3em
						border: 1px solid hsl(0, 0%, 80%)
						border-radius: .2em
						font-size: .9em
						font-family: font-heading
						text-transform: uppercase
						color: hsl(0, 0%, 30%)
						margin: 0 .3em 0 0


	/*
	**	Effects, keywords and stuff
	*/

	.boon,
	.condition,
	.positioning,
	.misc-effect,
	[data-profession],
	[data-recharge],
	[data-slot],
	[data-type]
		padding-left: 22px
		background-repeat: no-repeat
		background-position: left center
		min-height: 20px
		display: inline-block


	// Professions

	[data-profession="All"]
		background-image: url(image-path + icons/small/Any.png)

	[data-profession="Warrior"]
