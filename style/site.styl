/*	****************************************************************************
**
**	site.styl
**
**	Master style sheet for <http://gw2bbcode.colinaarts.com>
**
**	***************************************************************************/

@import base




/*	****************************************************************************
**	Vars
**	***************************************************************************/

image-path = '../img/'




/*	****************************************************************************
**	Main header
**	***************************************************************************/


#main-header
	display: table
	border-collapse: separate
	border-spacing: (gutter-x) (gutter-y*4)
	box-sizing: border-box
	width: 100%

	> *
		display: table-cell




/*	****************************************************************************
**	Branding
**	***************************************************************************/


#branding
	padding: (gutter-y*2) (gutter-x/2)
	width: 40%
	vertical-align: middle
	background: hsla(0, 0%, 100%, .4)

	> div
		max-width: 424px
		margin: auto
		position: relative

		> img
			display: block
			width: 100%

	#version-label
		margin: 0
		padding: 0 .5em
		position: absolute
		right: 0
		top: 0
		background: color-a2
		text-shadow: none
		color: color-bg
		text-transform: uppercase
		font-size: .9rem
		border-radius: .3em
		opacity: .5




/*	****************************************************************************
**	Download
**	***************************************************************************/


#download
	vertical-align: bottom
	text-align: center
	color: color-bg
	text-shadow: 1px 1px 1em rgba(color-fg, .8)
	links(lighten(color-a1, 70%))

	> :last-child
		margin-bottom: 0

	> p
		display: table
		max-width: 80%
		border-spacing: 0
		margin-left: auto
		margin-right: auto
		text-shadow: 0 0 .8em rgba(#000, .7), 0 0 .5em rgba(#000, .8), 0 0 .2em rgba(#000, 1)

	#intro
		font-family: font-heading
		font-size: 1.2rem
		font-weight: 600

	#download-lib > a
		button()




/*	****************************************************************************
**	Spotlight
**	***************************************************************************/


#spotlight
	display: table
	border-collapse: separate
	border-spacing: (gutter-x) (gutter-y*2)
	background: #fff
	box-sizing: border-box
	width: 100%

	> *
		display: table-cell
		width: 50%
		vertical-align: top

		> header
			margin: 0 0 .5em 0
			padding: 0 0 .5em 0
			border-bottom: 1px solid rgba(color-fg, .1)
			line-height: 1.5rem
			clearfix()

			> h1
				margin: 0
				float: left
				font-size: 1.1rem
				font-weight: bold
				color: color-a1

			> ul.toolbar
				margin: 0
				padding: 0
				float: right

				> li
					display: inline-block
					margin: 0
					vertical-align: middle

					> *
						vertical-align: middle





/*	****************************************************************************
**	Demo
**	***************************************************************************/


#demo
	> div
		position: relative

	#demo-skills
		margin: 0
		text-align: center

	.toolbar
		> li
			> *
				display: inline-block
				text-indent: -9999px
				width: 20px
				height: 20px
				background: no-repeat
				background-size: 20px 20px
				opacity: .5
				transition: opacity .5s ease .1s

				&:hover, &:focus, &:active
					opacity: 1

	#demo-renew
		background-image: url(image-path + icon-reload.png)

	#demo-all-skills
		background-image: url(image-path + icon-grid.png)




/*	****************************************************************************
**	News
**	***************************************************************************/


#news
	.atom
		> a
			text-indent: -9999px
			display: inline-block
			width: 20px
			height: 20px
			background: url(image-path + icon-feed.svg) no-repeat
			background-size: 20px
			border: 0

	> div
		clear: both
		height: 11.5rem
		overflow-y: auto
		padding: 0 .5em 0 0

	article

		&:not(:first-child)
			margin: .5em 0 0 0
			padding: .5em 0 0 0
			background: no-repeat top left
			background-image: -webkit-linear-gradient(left, rgba(color-a2, .5), transparent 70%)
			background-image: -moz-linear-gradient(left, rgba(color-a2, .5), transparent 70%)
			background-image: -ms-linear-gradient(left, rgba(color-a2, .5), transparent 70%)
			background-image: -o-linear-gradient(left, rgba(color-a2, .5), transparent 70%)
			background-image: linear-gradient(left, rgba(color-a2, .5), transparent 70%)
			background-size: 100% 1px

		> h1
			font-size: 1rem
			margin: 0
			font-weight: bold
			font-family: font-body
			font-size: 1.1rem

		> .pubinfo
			font-size: .7em
			margin: 0




/*	****************************************************************************
**	Overview
**	***************************************************************************/


#overview
	gutter(true)
	clear: both
	border: solid hsl(0, 0%, 87%)
	border-width: 1px 0
	box-shadow: 0 0 15px rgba(#000, .15)
	background: hsl(0, 0%, 95%) url(image-path + overview-bg.png) no-repeat bottom right
	background-size: contain
	color: rgba(#000, .9)
	position: relative

	> [role="tablist"]
		margin-top: 0
		text-align: center
		font-size: 1.2em
		font-weight: 600

	> .panels
		> *
			column-width: col-width
			column-gap: gutter-x

			> :first-child
				margin-top: 0

			> :last-child
				margin-bottom: 0

	#docs-ref
		column-count: 1
		text-align: center

	#stats
		column-width: 12em
		column-gap: (gutter-x/2)
		overflow-y: auto
		height: 100%

		dt, dd
			display: inline-block
			vertical-align: top

		dt
			margin: 0 .5em 0 0
			width: 9.5em
			font-weight: normal
			white-space: nowrap
			overflow: hidden
			text-overflow: ellipsis

		dd
			margin: 0
			font-weight: bold
			border-top: 1px solid transparent

			&.has-child-list
				display: block
				font-weight: bold
				border-top: 1px solid rgba(color-fg, .1)

			dl
				clear: both
				margin: 0 0 0 1em

	&.tab-control
		> [role="tablist"]
			> li
				background-repeat: no-repeat
				background-position: .5em center
				background-size: 1em 1em
				padding-left: 2em

			> [aria-controls="about"]
				background-image: url(image-path + icon-balloon2-white.png)

			> [aria-controls="usage"]
				background-image: url(image-path + icon-pencil-white.png)

			> [aria-controls="installation"]
				background-image: url(image-path + icon-appwindow-white.png)

			> [aria-controls="docs-ref"]
				background-image: url(image-path + icon-filefolder1-white.png)

			> [aria-controls="stats"]
				background-image: url(image-path + icon-chart-white.png)

			> [aria-controls="todo"]
				background-image: url(image-path + icon-checklist1-white.png)




/*	****************************************************************************
**	Main footer
**	***************************************************************************/


#main-footer
	background: #fff
	overflow: hidden
	gutter(true)
	padding-top: gutter-x
	color: lighten(color-fg, 50%)

	> p:first-of-type
		margin-top: 0

	#logos
		float: left
		width: 200px
		text-align: center
		border-right: 1px solid rgba(color-fg, .1)
		padding-right: gutter-x
		margin-right: gutter-x

		> *
			display: block
			width: 100%
			margin-top: gutter-y*2
			margin-bottom: 0
			border: 0

		> :first-child
			margin-top: 0

	#project-by
		text-transform: uppercase
		font-size: .8em

		a
			display: inline-block
			vertical-align: text-bottom
			width: 200px
			height: 26px
			text-indent: -9999px
			border: 0
			background: url(image-path + logo-colinaarts.com.png) no-repeat
			background-size: contain
